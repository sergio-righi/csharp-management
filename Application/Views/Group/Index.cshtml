@model Application.Models.Group.GroupFilter
@{
    ViewBag.Title = Title.Group;
}

<section id="section_header" class="section-header">

    <div class="title">@Title.Group</div>

    @*<div class="toolbar">

        <a asp-controller="Group" asp-action="Manage" asp-route-id="0" class="button button-add">

            @Button.Create

        </a>

    </div>*@

    <ol class="breadcrumb">

        <li><a asp-controller="Home" asp-action="Index">@Title.Home</a></li>
        <li>@Title.Group</li>

    </ol>

</section>

<section id="section_content" class="section-content">

    <div class="row">

        <div class="col col-12">

            <div id="message">

                @await Html.PartialAsync("~/Views/Shared/Feedback/_Message.cshtml")

            </div>

        </div>

        <div class="col col-12">

            <div id="filter">

                @{
                    await Html.RenderPartialAsync("~/Views/Group/_Filter.cshtml", Model.Filter);
                }

            </div>

        </div>

        <div class="col col-12">

            <div id="result">

                @{
                    await Html.RenderPartialAsync("~/Views/Group/_Table.cshtml", Model);
                }

            </div>

        </div>

    </div>

</section>