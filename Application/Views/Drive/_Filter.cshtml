@model Application.Models.FilterViewModel<Domain.Entity.File>

@using (Html.BeginForm("Index", "Drive", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Sort)
    @Html.HiddenFor(model => model.Direction)

    <div class="row">

        <div class="col col-12 col-sm-8">

            <div class="form-group">

                <label>@Label.Name</label>

                @Html.TextBoxFor(model => model.Name, new { @autocomplete = "off" })

            </div>

        </div>

        <div class="col col-12 col-sm-4">

            <div class="form-group">

                <label>@Label.Type</label>

                @Html.DropDownListFor(model => model.SituationId, EExtension.All.GetSelectList<EExtension>(), string.Format(Message.SelectOneMale, Label.Type.ToLower()), new { @class = "" })

            </div>

        </div>

        <div class="col col-12">

            <div class="form-group">

                <button type="submit" class="button button-search">

                    @Button.Find

                </button>

                <a asp-controller="Drive"
                   asp-action="Index" class="button button-clean">

                    @Button.Clean

                </a>

            </div>

        </div>

    </div>
}
