@{
    ViewBag.Title = Title.Home;

    string[][] items = new string[][]
    {
        new string[] { "Item", Title.Item },
        new string[] { "Product", Title.Product },
        new string[] { "JuridicalPerson", Title.JuridicalPerson },
        new string[] { "NaturalPerson", Title.NaturalPerson },
        new string[] { "Rent", Title.Rent },
        new string[] { "Drive", Title.Drive },
        new string[] { "Sale", Title.Sale },
        new string[] { "Bill", Title.Bill },
        new string[] { "Role", Title.Role },
        new string[] { "Group", Title.Group },
        new string[] { "Payroll", Title.Payroll },
        new string[] { "Expense", Title.Expense },
        new string[] { "Exam", Title.Exam },
        new string[] { "Overtime", Title.Overtime },
        new string[] { "Vacation", Title.Vacation }
    };
}

