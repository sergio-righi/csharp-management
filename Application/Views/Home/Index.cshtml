<div class="container-fluid">

    <div class="row">

        @foreach (var item in items)
        {
            <div class="col col-6 col-sm-4 col-md-3">

                <a asp-controller="@item[0]" asp-action="Index" class="card">

                    <div class="card-info">

                        <div class="card-title">@item[1]</div>

                    </div>

                </a>

            </div>
        }

    </div>

</div>