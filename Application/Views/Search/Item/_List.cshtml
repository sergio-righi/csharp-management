@model ICollection<Domain.Entity.Item>

@if (Model.Count > 0)
{
    <form id="select_item_form" asp-controller="SearchItem" asp-action="Select"
          data-ajax-success="selectItemSuccess" data-ajax="true" data-ajax-method="POST">

        <div class="form-group">

            <div class="list list-border list-hover">

                @foreach (var item in Model)
                {
                    <div class="list-item list-border c-pointer">

                        <div class="list-control">

                            <div class="radio">

                                <input type="radio" id="@item.Id" name="rbt_id" value="@item.Id">
                                <label for="@item.Id"></label>

                            </div>

                        </div>

                        <div class="list-content">

                            <div class="list-title">
                                @item.Name
                            </div>

                            @{
                                var hierarchy = item.GetHierarchy();
                            }

                            @if (!string.IsNullOrWhiteSpace(hierarchy))
                            {
                                <div class="list-title">
                                    @hierarchy
                                </div>
                            }

                        </div>

                    </div>
                }

            </div>

        </div>

        <br />

        <div class="form-group">

            <button type="submit" class="button button-send">

                @Button.Select

            </button>

        </div>

        <br />

    </form>
}